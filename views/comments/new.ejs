<% include ../partials/header.ejs %>
<div class="container">
    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div style="width: 35%; margin: 30px auto;">
            <h2>Add Comment to <%= campground.name %></h2>
            <div class="form-group">
                <label  >Author Name</label>
                <input type="text" class="form-control" name="comment[author]" aria-describedby="emailHelp" placeholder="Comment Author">
            </div>
            <div class="form-group">
                <label >Text</label>
                <textarea class="form-control" name="comment[text]" placeholder="Comment Text"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
<% include ../partials/footer.ejs %>