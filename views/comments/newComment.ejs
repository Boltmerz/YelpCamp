<% include ./partials/header.ejs %>
<div class="container">
    <form name="new-campground" action="/campgrounds" method="POST">
        <div style="width: 35%; margin: 30px auto;">
            <h2>Create a new camp</h2>
            <div class="form-group">
                <label for="campName">Camp Name</label>
                <input type="text" class="form-control" name="campName" id="campName" aria-describedby="emailHelp" placeholder="New camp name to add">
            </div>
            <div class="form-group">
                <label for="imageUrl">Image URL</label>
                <input type="text" class="form-control" name="imageUrl" id="imageUrl" placeholder="Camp Image URL">
            </div>
            <div class="form-group">
                <label for="description">Camp description</label>
                <TextArea  class="form-control" name="description" id="description" placeholder="Enter camp description"></TextArea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
<% include ./partials/footer.ejs %>