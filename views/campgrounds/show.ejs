<% include ../partials/header.ejs %>
<h1><%= campground.name %></h1>

<img width='500px' src="<%= campground.image %>" >

<div>
    <p>
        <h3><%= campground.description %></h3>
    </p>
</div>
<div>
    <p>
        <% campground.comments.forEach(function(comment){  %>
            <strong>Author:</strong> <%= comment.author %> <strong>- Text:</strong> <%= comment.text %>
    </p>
        <% }) %>
    
    <p>
        <a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-success">Add new comment</a>
    </p>
</div>

<% include ../partials/footer.ejs %>